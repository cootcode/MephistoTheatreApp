@model DGrabowski_MephistoTheatreApp.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title.</h2>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Create a new account.</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })


        <div class="row">
            <div class="col-md-6">
                <div class="form-group row pb-2">
                    @Html.LabelFor(m => m.Firstname, new { @class = "col-md-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Firstname, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row pb-2">
                    @Html.LabelFor(m => m.Lastname, new { @class = "col-md-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Lastname, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row pb-2">
                    @Html.LabelFor(m => m.Street, new { @class = "col-md-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Street, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row pb-2">
                    @Html.LabelFor(m => m.City, new { @class = "col-md-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row pb-2">
                    @Html.LabelFor(m => m.Postcode, new { @class = "col-md-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Postcode, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row pb-2">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row pb-2">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row pb-2">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 col-form-label" })
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    <div class="offset-md-4 col-md-8">
                        <input type="submit" value="Register" class="btn btn-outline-dark" />
                    </div>
                </div>
            </div>

                <div class="col-md-6">
                    <img src="~/images/masks.png" alt="Your Image" class="img-fluid" />
                </div>
            </div>
                }
    </main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
